{
    "name": "FocusBro",
    "version": "1.0",
    "description": "FocusBro is a browser extension that helps you focus on your work by blocking distracting websites.",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "webNavigation",
        "tabs",
        "idle"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }

}